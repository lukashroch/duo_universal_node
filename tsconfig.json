{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "lib": ["ES2018"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "types": [
      "node",
      "jest",
      "jest-extended"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
